<%= form_for [:admin, @user] do |f| %>
  <% if @user.errors.any? %>
    <h3><%= pluralize @user.errors.count, "error" %>prohibit this user to be created.</h3>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :password  %><br />
    <%= f.password_field :password %>
  </p> 
  <p>
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%= f.check_box :admin %><br />
    <%= f.label :admin, "Is an admin?" %>
  </p>
  <p><%= f.submit %></p>
<% end %>

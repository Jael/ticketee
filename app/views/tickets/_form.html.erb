<%= form_for [@project, @ticket], html: {multipart: true} do |f| %>
<% if @ticket.errors.any? %>
  <h2><%= pluralize @ticket.errors.count, "error" %> prohibit this ticket to be create.</h2>
  <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %><br />
  <%= f.text_area :description, rows:3 %>
</div>
  <% number = 0 %>
  <%= render partial: 'files/form', locals: {number: number} %>
<%= link_to "Add another file", 'javascript:', id: "add_another_file"  %>

<p><%= f.submit %></p>
<% end %>

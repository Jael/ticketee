<div id='ticket'>
<h2><%= @ticket.title %></h2>
<em>Created by <%= @ticket.user.email %></em>
<p><%= simple_format @ticket.description %></p>
<% if @ticket.asset.exists? %>
  <h3>Attached File</h3>
<div class="asset">
<p>
 <%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
 </p>
 <p><small><%= number_to_human_size @ticket.asset.size %>(<%= @ticket.asset.content_type %>)</small></p>
</div>
  <% end %>
<%= authorized?("edit tickets", @project) do %>
<%= link_to "Edit", [:edit, @project, @ticket] %>
<% end %>
<%= authorized?("delete tickets", @project) do %>
| <%= link_to "Delete", [@project, @ticket], method: :delete, confirm: "Are you sure?" %>
<% end %>
</div>


<h1>New Ticket</h1>
<%= form_for [@project, @ticket] do |f| %>
<% if @ticket.errors.any? %>
  <h2><%= pluralize @ticket.errors.count, "error" %> prohibit this ticket to be create.</h2>
  <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description, rows:3 %>
</p>
<p><%= f.submit %></p>
<% end %>

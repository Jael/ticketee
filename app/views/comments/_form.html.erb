<strong>New comment</strong>
<%= form_for [@ticket,@comment] do |f| %>
  <% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%=f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p><%= f.submit %></p>
<% end %>
